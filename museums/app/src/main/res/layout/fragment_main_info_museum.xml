<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBeige"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/main_info_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/brown"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_info_museum_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/darkBeige"
                        android:textSize="22sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/main_info_museum_image_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/brown"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/main_info_museum_btn_description_btn"
                        style="@style/darkBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="20sp"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingHorizontal="20dp"
                        android:text="@string/description"
                        android:textAlignment="gravity"
                        android:textColor="@color/darkBeige"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/main_info_museum_description_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/prata"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:textColor="@color/dark_dark_brown"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/brown"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/prata"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/address"
                        android:textAlignment="center"
                        android:textColor="@color/darkBeige"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/main_info_museum_address_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/prata"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:textColor="@color/dark_dark_brown" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>