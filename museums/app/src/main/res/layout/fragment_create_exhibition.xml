<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown"
                android:fontFamily="@font/prata"
                android:gravity="center_horizontal"
                android:text="Новая выставка"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/darkBeige"
                android:textSize="20sp">

            </TextView>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                style="@style/textBoxOuter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Название выставки">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:textColor="@color/dark_dark_brown"
                    android:textSize="20sp" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <Button
                style="@style/darkBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:gravity="center_horizontal|center_vertical"
                android:paddingHorizontal="20dp"
                android:text="Выбрать фото"
                android:textAlignment="center"
                android:textColor="@color/darkBeige"
                android:textSize="20sp"
                tools:ignore="RtlCompat">

            </Button>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/museum_photo">

            </ImageView>

            <Button
                style="@style/darkBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Описание"
                android:textAlignment="center"
                android:textColor="@color/darkBeige"
                android:textSize="20sp"
                tools:ignore="RtlCompat">

            </Button>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                style="@style/textBoxOuter"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:labelText="Описание выставки">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:textColor="@color/dark_dark_brown"
                    android:textSize="20sp" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown"
                android:fontFamily="@font/prata"
                android:gravity="center_horizontal"
                android:text="Дата проведения"
                android:textAlignment="center"
                android:textColor="@color/darkBeige"
                android:textSize="20sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:orientation="horizontal">

                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        style="@style/textBoxOuter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"

                        app:labelText="Дата начала">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="date"
                            android:textColor="@color/dark_dark_brown"
                            android:textSize="20sp" />
                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        style="@style/textBoxOuter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"

                        app:labelText="Дата завершения">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="date"
                            android:textColor="@color/dark_dark_brown"
                            android:textSize="20sp" />
                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown"
                android:orientation="horizontal">

                <TextView
                     android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:background="@color/brown"
                    android:fontFamily="@font/prata"
                    android:gravity="center_horizontal"
                    android:text="Экспонаты"
                    android:textAlignment="center"
                    android:textColor="@color/darkBeige"
                    android:textSize="20sp">

                </TextView>

                <ImageButton
                    android:id="@+id/create_new_exhibition_image_btn"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@color/glass"
                    android:scaleType="fitCenter"
                    android:rotation="45"
                    android:clickable="true"
                    android:tint="@color/darkBeige"
                    android:src="@drawable/close"
                    >

                </ImageButton>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/create_exhibition_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:column_count_portrait="2"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="2"
                >

            </androidx.recyclerview.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/relativeLayotAuthorization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/blue"
                android:theme="@style/roundBtn">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:scaleType="matrix"
                        android:src="@drawable/image_for_btn">

                    </ImageView>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/create_exhibit_create_exhibit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/glass"
                    android:clickable="true"
                    android:fontFamily="@font/prata"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="Создать"
                    android:textAllCaps="false"
                    android:textColor="@color/darkBeige">

                </Button>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>