<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBeige"
    android:orientation="vertical">

    <ScrollView
        android:background="@color/darkBeige"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/brown"
                    android:fontFamily="@font/prata"
                    android:gravity="center_horizontal"
                    android:text="Атлас В. Маяковский"
                    android:textAlignment="center"
                    android:textSize="30sp">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/darkBeige"
                    android:src="@drawable/image1">

                </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:background="@color/white"
                    android:id="@+id/detailed_exhibition_option_pane_lin_lay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:id="@+id/detailed_exhibition_like_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:src="@drawable/like"
                        app:tint="@color/pink">

                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:src="@drawable/share"
                        app:tint="@color/brown">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/prata"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="5.05-30.06"
                            android:textAlignment="center"
                            android:textColor="@color/dark_dark_brown">

                        </TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/detailed_exhibition_close_image_view"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:clickable="true"
                        android:src="@drawable/close"
                        app:tint="@color/brown">

                    </ImageView>
                </LinearLayout>


                <TextView
                    android:textAlignment="center"
                    android:background="@color/darkBeige"
                    android:text="@string/description"
                    android:textColor="@color/dark_dark_brown"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/prata"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                </TextView>
                <Button
                    style="@style/darkBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"

                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:text="@string/information_on_museum"
                    android:textAlignment="gravity">

                </Button>
                <Button
                    style="@style/darkBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"

                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:text="Экспонаты"
                    android:textAlignment="gravity">

                </Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>