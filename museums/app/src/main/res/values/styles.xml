<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/brown</item>
    </style>

    <style name="TextPrata">

        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/prata</item>
    </style>

    <style name="roundBtn">
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:bottomRightRadius">5dp</item>
        <item name="android:topLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>

    </style>

    <style name="menuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/dark_brown</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="editTextFields">


    </style>

    <style name="darkBtn">
        <item name="android:textAllCaps">false</item>

        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/prata</item>
        <item name="android:background">@color/brown</item>
    </style>


    <style name="textBoxOuter">

        <item name="fontFamily">@font/prata</item>
        <item name="errorColor">@color/blue</item>

        <item name="helperTextColor">@color/darkBeige</item>
        <item name="panelBackgroundColor">@color/lightBeige</item>
        <item name="primaryColor">@color/grey</item>
        <item name="secondaryColor">@color/grey</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>

    </style>


    <style name="AboutDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorAccent">@color/blue</item>
    </style>
</resources>